<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.brandon.it226project2.SpecificAlarm">

    <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Date"
            android:id="@+id/pick_date_button"
            android:layout_marginTop="56dp"
            android:layout_alignParentTop="true" android:layout_toStartOf="@+id/button"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Time"
            android:id="@+id/pick_time_button"
            android:layout_alignTop="@+id/pick_date_button" android:layout_toEndOf="@+id/button"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recursive Alarm?"
            android:id="@+id/checkBox2"
            android:layout_marginBottom="52dp" android:layout_above="@+id/button"
            android:layout_centerHorizontal="true"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Confirm"
            android:id="@+id/button"
            android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Selected:"
            android:id="@+id/textView"
            android:textSize="18dp"
            android:layout_marginTop="28dp"
            android:layout_below="@+id/pick_date_button" android:layout_alignStart="@+id/pick_date_button"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Time Selected:"
              android:id="@+id/textView2" android:textSize="18dp"
              android:singleLine="true" android:textAlignment="center" android:layout_alignTop="@+id/textView"
              android:layout_alignEnd="@+id/pick_time_button"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText" android:layout_centerVertical="true" android:layout_alignEnd="@+id/checkBox2"
            android:layout_alignStart="@+id/checkBox2" android:hint="Alarm text..."/>
</RelativeLayout>
