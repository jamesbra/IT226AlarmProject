<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.brandon.it226project2.createAlarm">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save alarm"
            android:id="@+id/confirm_button"
            android:layout_alignParentBottom="true" android:layout_toStartOf="@+id/location_button"
            android:textStyle="bold"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:id="@+id/date_button"
            android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/confirm_button"/>
    <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timePicker"
            style="@style/AppTheme" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location Set"

            android:id="@+id/location_button"
            android:layout_alignTop="@+id/confirm_button" android:layout_alignParentEnd="true"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/alarm_text"
            android:text="Text for alarm"
            android:layout_above="@+id/confirm_button" android:layout_centerHorizontal="true" android:editable="true"
            android:clickable="true"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/current_date_selected"
            android:layout_below="@+id/timePicker" android:layout_alignEnd="@+id/alarm_text" android:clickable="false"/>
</RelativeLayout>
