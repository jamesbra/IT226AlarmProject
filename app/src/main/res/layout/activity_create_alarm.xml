<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.brandon.it226project2.createAlarm">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="Save alarm"
            android:id="@+id/confirm_button"
            android:textStyle="bold"
            android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Specific Alarm"
            android:id="@+id/specific_alarm_button"
            android:layout_above="@+id/location_button" android:layout_alignParentEnd="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location Alarm"

            android:id="@+id/location_button"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/current_date_selected" android:layout_marginTop="20dp"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/alarm_text"
            android:editable="true"
            android:clickable="true" android:hint="Text for alarm"
            android:maxLines="1"
            android:inputType="text"
            android:layout_above="@+id/checkBox" android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"/>
    <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/current_date_selected"
            android:textAlignment="center" android:textSize="20dp" android:textStyle="normal"
            android:layout_alignStart="@+id/alarm_text" android:layout_above="@+id/alarm_text"
            android:layout_marginTop="20dp" android:layout_marginBottom="20dp"/>
    <CheckBox
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Recursive Alarm?"
            android:id="@+id/checkBox"
            android:layout_above="@+id/confirm_button" android:layout_alignEnd="@+id/location_button"/>
    <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Timer Alarm"
            android:id="@+id/timer_alarm"
            android:layout_above="@+id/location_button" android:layout_alignParentStart="true"/>
</RelativeLayout>
